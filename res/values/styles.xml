<resources>

    <style name="AppBaseTheme" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/MusicBrowserActionBarStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:navigationBarDividerColor">@color/gray</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="android:colorPrimary">@color/ruyi_blue</item>
        <!--转化为小写-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MusicBrowserActionBarStyle" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/ruyi_blue</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textColor">@color/switch_accent_color</item>
        <item name="android:textSize">14sp</item>
        <!-- <item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Provision" parent="AppTheme">
        <item name="android:textColor">@color/language_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:colorAccent">@color/switch_accent_color</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Settings"
           parent="@android:style/Theme.DeviceDefault.Settings">

    </style>

    <style name="Settings.NoActionBar" parent="@style/Settings">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/holo_purple</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/ic_launcher</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ThemeOverlay"/>

    <style name="ThemeOverlay.SwitchBar" parent="@android:style/ThemeOverlay">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="android:colorAccent">@color/switch_accent_color</item>
    </style>

    <style name="details_textview">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="android:textColor">@color/switch_accent_color</item>
    </style>

    <style name="bottom_button_style">
        <item name="android:textColor">@color/switch_accent_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/bottom_button_ripple</item>
    </style>

    <style name="title_text_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">84dp</item>
        <item name="android:layout_marginLeft">23dp</item>
    </style>

    <style name="RippleWhite">
        <item name="android:colorControlHighlight">#FAFAFA</item>
        <item name="android:radius">25dp</item>
    </style>

