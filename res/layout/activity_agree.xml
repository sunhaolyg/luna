<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical" android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
            style="@style/title_image_style"
            android:src="@drawable/agreement"/>

    <TextView
            android:text="@string/agreement"
            style="@style/title_text_style"
    />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="156dp"
            android:layout_marginBottom="96dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
        >

            <TextView
                    android:id="@+id/agree_thumb_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@android:color/black"/>

            <LinearLayout
                    android:id="@+id/agree_improve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal"
            >

                <ImageView
                        android:id="@+id/iv_agree_improve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/agreed"
                        android:layout_gravity="center_vertical"
                />

                <TextView
                        android:id="@+id/agree_thumb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10dp"
                        android:text="@string/secret_join"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/black"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/agree_improve_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@android:color/black"/>

        </LinearLayout>


    </ScrollView>

    <Button
            android:id="@+id/agree_next"
            style="@style/ProvisionSetupWizardButtonRight"
            android:text="@string/next"/>

</FrameLayout>