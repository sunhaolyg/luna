<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <Button
                android:id="@+id/attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dn"
                android:text="@string/attr"/>

        <Button
                android:id="@+id/base_animator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dn"
                android:text="@string/base_animator"/>

        <Button
                android:id="@+id/splash_animator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dn"
                android:text="@string/splash_animator"/>


        <Button
                android:id="@+id/pieview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dn"
                android:text="@string/pieview"/>


        <Button
                android:id="@+id/path_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dn"
                android:text="@string/path_measure"/>

        <Button
                android:id="@+id/bezier_wave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dn"
                android:text="@string/bezier_wave"/>


    </LinearLayout>


</ScrollView>