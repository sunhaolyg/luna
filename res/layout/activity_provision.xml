<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
            style="@style/title_image_style"
            android:src="@drawable/language"/>

    <TextView
            android:text="@string/select_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="84dp"
            android:layout_marginLeft="23dp"
    />

    <FrameLayout
            android:id="@+id/right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="156dp"
            android:layout_marginBottom="96dp"
            android:layout_marginLeft="27dp"
    >

    </FrameLayout>

    <Button
            android:id="@+id/provision_jump"
            style="@style/ProvisionSetupWizardButtonLeft"
            android:text="@string/provision_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom"/>

    <Button
            android:id="@+id/provision_init"
            style="@style/ProvisionSetupWizardButtonRight"
            android:text="@string/next"/>

</FrameLayout>